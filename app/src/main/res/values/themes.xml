<resources>
    <!-- Base application theme. -->
    <style name="Theme.MagicCoffee" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/primary_variant</item>
        <item name="colorOnPrimary">@color/on_primary</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/secondary</item>
        <item name="colorSecondaryVariant">@color/secondary_variant</item>
        <item name="colorOnSecondary">@color/on_secondary</item>

        <item name="colorError">@color/error</item>
        <item name="colorOnError">@color/on_error</item>
        <item name="android:colorBackground">@color/background</item>
        <item name="colorOnBackground">@color/on_background</item>
        <item name="colorSurface">@color/surface</item>
        <item name="colorOnSurface">@color/on_surface</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <item name="android:windowLightStatusBar">true</item>
        <!--Typography-->
        <item name="textAppearanceHeadline2">@style/TextAppearance.Coffee.Headline2</item>
        <item name="textAppearanceHeadline3">@style/TextAppearance.Coffee.Headline3</item>
        <item name="textAppearanceHeadline4">@style/TextAppearance.Coffee.Headline4</item>
        <item name="textAppearanceHeadline5">@style/TextAppearance.Coffee.Headline5</item>
        <item name="textAppearanceHeadline6">@style/TextAppearance.Coffee.Headline6</item>
        <item name="textAppearanceSubtitle1">@style/TextAppearance.Coffee.Subtitle1</item>
        <item name="textAppearanceSubtitle2">@style/TextAppearance.Coffee.Subtitle2</item>
        <item name="textAppearanceBody1">@style/TextAppearance.Coffee.Body1</item>
        <item name="textAppearanceBody2">@style/TextAppearance.Coffee.Body2</item>
        <item name="textAppearanceButton">@style/TextAppearance.Coffee.Button</item>
        <item name="textAppearanceCaption">@style/TextAppearance.Coffee.Caption</item>
        <item name="textAppearanceOverline">@style/TextAppearance.Coffee.Overline</item>
    </style>

    <style name="CustomAlertDialog" parent="Theme.AppCompat.DayNight.Dialog.Alert">
        <item name="android:windowBackground">@drawable/bg_edit_text</item>
    </style>
</resources>