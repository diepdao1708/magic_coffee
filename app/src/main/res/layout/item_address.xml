<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/ripple_background"
    android:paddingHorizontal="@dimen/padding_medium">

    <ImageView
        android:id="@+id/delete_btn"
        android:layout_width="@dimen/icon_large"
        android:layout_height="@dimen/icon_large"
        android:layout_alignParentStart="true"
        android:layout_marginTop="@dimen/margin_medium"
        android:background="@drawable/ripple_background"
        android:padding="@dimen/padding_medium"
        android:src="@drawable/icon_delete_outlined"
        tools:ignore="ContentDescription" />

    <TextView
        android:id="@+id/name_txt"
        style="@style/TextAppearance.Coffee.Body1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/delete_btn"
        android:layout_alignBottom="@id/delete_btn"
        android:layout_marginStart="@dimen/margin_medium"
        android:layout_toStartOf="@id/edit_btn"
        android:layout_toEndOf="@id/delete_btn"
        android:gravity="center_vertical" />

    <ImageView
        android:id="@+id/edit_btn"
        android:layout_width="@dimen/icon_large"
        android:layout_height="@dimen/icon_large"
        android:layout_alignTop="@id/delete_btn"
        android:layout_alignBottom="@id/delete_btn"
        android:layout_alignParentEnd="true"
        android:background="@drawable/ripple_background"
        android:padding="@dimen/padding_medium"
        android:src="@drawable/icon_edit"
        tools:ignore="ContentDescription" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/name_txt"
        android:layout_marginTop="@dimen/margin_medium"
        android:background="@color/ripple" />

</RelativeLayout>